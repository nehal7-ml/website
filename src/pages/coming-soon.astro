
---
import Logo from '../components/Logo.astro';
import BaseLayout from '../layouts/Layout.astro';
---

<BaseLayout title={'coming soon'}>
  <main class="flex flex-col items-center text-center px-4 my-10 lg:mt-8">
    <Logo height={250} width={250} />
    <svg viewBox="0 0 200 150" class="w-32 h-32 mx-auto my-6">
      <!-- Anvil base -->
      <rect x="60" y="100" width="80" height="20" rx="3" fill="#444" />
      <rect x="75" y="115" width="50" height="10" rx="2" fill="#666" />
      
      <!-- Hammer -->
      <g class="animate-hammer-hit">
        <rect x="40" y="20" width="12" height="50" fill="#555" />
        <rect x="30" y="15" width="32" height="12" fill="#999" />
      </g>
      <g id="sparksContainer" class="translate-x-[115px] translate-y-[100px]" > 
        
        <line x1="0" y1="0" x2="-8" y2="-8" stroke="#F59E0B" stroke-width="1.5" class="animate-spark"/> 
        <line x1="0" y1="0" x2="8" y2="-8" stroke="#FBBF24" stroke-width="1.5" class="animate-spark"/> 
        <line x1="0" y1="0" x2="-10" y2="0" stroke="#EF4444" stroke-width="1.5" class="animate-spark"/> 
        <line x1="0" y1="0" x2="10" y2="0" stroke="#F59E0B" stroke-width="1.5" class="animate-spark"/>
        <line x1="0" y1="0" x2="-6" y2="10" stroke="#FBBF24" stroke-width="1.5" class="animate-spark"/>
        <line x1="0" y1="0" x2="6" y2="10" stroke="#EF4444" stroke-width="1.5" class="animate-spark"/>
      </g>

    </svg>

    <h1 class="text-5xl leading-[4rem]  font-extrabold text-transparent bg-clip-text bg-gradient-to-r from-purple-400 via-pink-500 to-red-500">
      Coming Soon
    </h1>
    <p class="text-lg mt-4 text-gray-400">
      We're forging something powerful. Stay tuned.
    </p>
  </main>
</BaseLayout>

